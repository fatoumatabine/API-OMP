{
    "openapi": "3.0.0",
    "info": {
        "title": "Orange Money API",
        "description": "API pour les services financiers mobile",
        "contact": {
            "email": "support@orangemoney.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "https://ompay-4mgy.onrender.com",
            "description": "Serveur de production"
        },
        {
            "url": "http://localhost:8000",
            "description": "Serveur local"
        },
        {
            "url": "https://ompay-4mgy.onrender.com/api/v1"
        }
    ],
    "paths": {
        "/v1/auth/login": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Connexion utilisateur",
                "operationId": "a1a0dd98bb5ac2c2340c31bf02f09d1e",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "phone_number",
                                    "password"
                                ],
                                "properties": {
                                    "phone_number": {
                                        "type": "string",
                                        "example": "+22245678901"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "password"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Connexion réussie",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Connexion réussie"
                                        },
                                        "token": {
                                            "type": "string",
                                            "example": "eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..."
                                        },
                                        "user": {
                                            "properties": {
                                                "id": {
                                                    "type": "string",
                                                    "example": "a1b2c3d4-e5f6-7890-1234-567890abcdef"
                                                },
                                                "phone_number": {
                                                    "type": "string",
                                                    "example": "+22245678901"
                                                },
                                                "first_name": {
                                                    "type": "string",
                                                    "example": "John"
                                                },
                                                "last_name": {
                                                    "type": "string",
                                                    "example": "Doe"
                                                },
                                                "email": {
                                                    "type": "string",
                                                    "format": "email",
                                                    "example": "john.doe@example.com"
                                                },
                                                "kyc_status": {
                                                    "type": "string",
                                                    "example": "pending"
                                                },
                                                "biometrics_active": {
                                                    "type": "boolean",
                                                    "example": false
                                                },
                                                "created_at": {
                                                    "type": "string",
                                                    "format": "date-time"
                                                },
                                                "updated_at": {
                                                    "type": "string",
                                                    "format": "date-time"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Identifiants invalides"
                    }
                }
            }
        },
        "/v1/register": {
            "post": {
                "tags": [
                    "Compte"
                ],
                "summary": "Enregistrer un nouvel utilisateur",
                "operationId": "45c0c435eea6fe6350e990df96be5b10",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "phone_number",
                                    "first_name",
                                    "last_name",
                                    "email",
                                    "password",
                                    "password_confirmation",
                                    "pin_code",
                                    "cni_number"
                                ],
                                "properties": {
                                    "phone_number": {
                                        "type": "string",
                                        "example": "+22245678901"
                                    },
                                    "first_name": {
                                        "type": "string",
                                        "example": "John"
                                    },
                                    "last_name": {
                                        "type": "string",
                                        "example": "Doe"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "john.doe@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "password"
                                    },
                                    "password_confirmation": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "password"
                                    },
                                    "pin_code": {
                                        "type": "string",
                                        "example": "1234"
                                    },
                                    "cni_number": {
                                        "type": "string",
                                        "example": "1234567890ABC"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Utilisateur enregistré avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Utilisateur enregistré avec succès."
                                        },
                                        "user": {
                                            "properties": {
                                                "id": {
                                                    "type": "string",
                                                    "example": "a1b2c3d4-e5f6-7890-1234-567890abcdef"
                                                },
                                                "phone_number": {
                                                    "type": "string",
                                                    "example": "+22245678901"
                                                },
                                                "first_name": {
                                                    "type": "string",
                                                    "example": "John"
                                                },
                                                "last_name": {
                                                    "type": "string",
                                                    "example": "Doe"
                                                },
                                                "email": {
                                                    "type": "string",
                                                    "format": "email",
                                                    "example": "john.doe@example.com"
                                                },
                                                "kyc_status": {
                                                    "type": "string",
                                                    "example": "pending"
                                                },
                                                "biometrics_active": {
                                                    "type": "boolean",
                                                    "example": false
                                                },
                                                "created_at": {
                                                    "type": "string",
                                                    "format": "date-time"
                                                },
                                                "updated_at": {
                                                    "type": "string",
                                                    "format": "date-time"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Erreurs de validation"
                    }
                }
            }
        },
        "/transactions/transfer": {
            "post": {
                "tags": [
                    "Transactions"
                ],
                "summary": "Effectuer un transfert d'argent",
                "operationId": "f5c88591ca5dacf77aaea5b9f6501116",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "receiver_phone",
                                    "amount"
                                ],
                                "properties": {
                                    "receiver_phone": {
                                        "type": "string",
                                        "example": "771234568"
                                    },
                                    "amount": {
                                        "type": "number",
                                        "format": "float",
                                        "example": 5000
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "Transfert familial"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Transfert effectué avec succès"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/transactions/history": {
            "get": {
                "tags": [
                    "Transactions"
                ],
                "summary": "Historique des transactions",
                "operationId": "8b99176af7f5e4dae053dfe23da0eed2",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Numéro de page",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Liste des transactions"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/v1/wallet/balance": {
            "get": {
                "tags": [
                    "Wallet"
                ],
                "summary": "Obtenir le solde du compte",
                "operationId": "dd3af443c2049b4ee08a8bbb6b009c7b",
                "responses": {
                    "200": {
                        "description": "Solde récupéré avec succès"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/v1/wallet/deposit": {
            "post": {
                "tags": [
                    "Wallet"
                ],
                "summary": "Dépôt d'argent",
                "operationId": "bcff6bc99dec564c873ec30fee98ec59",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "amount"
                                ],
                                "properties": {
                                    "amount": {
                                        "type": "number",
                                        "format": "float",
                                        "example": 10000
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Dépôt effectué avec succès"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Authentication",
            "description": "Endpoints pour l'authentification"
        },
        {
            "name": "Compte",
            "description": "API Endpoints pour la gestion des comptes utilisateurs"
        },
        {
            "name": "Transactions",
            "description": "Endpoints pour la gestion des transactions"
        },
        {
            "name": "Wallet",
            "description": "Endpoints pour la gestion du portefeuille"
        }
    ]
}